<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="ToDo" Height="550" Width="500">



    <Grid Background="BlueViolet">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text=    "Kann das nicht wer anders machen?" 
                                    FontWeight="Bold" FontSize ="17" FontFamily="Comic Sans MS" 
                                    Margin="5,10,5,10" TextAlignment="Center" Foreground ="White"  />
        

         <ComboBox              x:Name ="InputBox" Margin="5,5,5,20" Height="25" Background="White" Width="400"
                                Text="{Binding EingabeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding Vorschläge}"
                                SelectedItem="{Binding AusgewählterVorschlag, Mode=TwoWay}"
                                StaysOpenOnEdit="True"
                                IsTextSearchEnabled ="False"
                                IsEditable="True"
                                IsSynchronizedWithCurrentItem="False">
         </ComboBox>
            
        </StackPanel>

        <Grid Grid.Row="1">


            <Button Content     ="Hinzufügen" Width="75" Margin="0,0,0,20" Background="White" FontWeight="Bold"
                                    Click="Button_Click" x:Name="Hinzufügen"/>



        </Grid>

        <Grid Grid.Row="2">
            <StackPanel>
                <TextBlock Text="{Binding ListenÜberschrift}" FontWeight="Bold" FontSize="16" Foreground="White" TextAlignment="Center" />
                <ListBox ItemsSource="{Binding Liste}" Background= "CadetBlue"  
                            SelectedItem="{Binding SelectedListItem, Mode=TwoWay}" Width="400" Height="175">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text ="• " FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text =    "{Binding Text}">
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Oben" FontWeight ="Bold" Width="50" Click="Button_Click" x:Name="Oben" Margin="5" />
                    <Button Content="Unten" FontWeight="Bold" Width="50" Click="Button_Click" x:Name="Unten" Margin="5" />
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock  Foreground="Gold" FontSize="14" FontWeight="Bold" 
                        Text="{Binding Punktestand}" >
                </TextBlock>
                <Button x:Name="Auswertung" Content="Auswertung" Click="Button_Click" Margin="5"/>
                <TextBlock  Foreground="Gold" FontSize="14" FontWeight="Bold" 
                            Text="{Binding Winner}" >
                </TextBlock>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content=    "Alex" Width="75" Margin=" 0,20,0,0" Background="White" FontWeight="Bold"
                                    Click="Button_Click" x:Name="AlexJob" />
            
            <Button Content=    "AlexListe" Width="75" Margin=" 0,20,0,0" Background="White" FontWeight="Bold"
                                    Grid.Column="1"
                                    Click="Button_Click" x:Name="AlexListe" />
            
            <Button Content=    "Aufgaben" Width="75" Margin=" 0,20,0,0" 
                                Grid.Column="2" Background="White" FontWeight="Bold"
                                Click="Button_Click" x:Name="Aufgaben"/>
            
            <Button Content=    "Verena" Width="75" Margin=" 0,20,0,0" 
                                Grid.Column="3" Background="White" FontWeight="Bold"
                                    Click="Button_Click" x:Name="VerenaJob"/>
            
            <Button Content=    "VerenaListe" Width="75" Margin=" 0,20,0,0" 
                                Grid.Column="4" Background="White" FontWeight="Bold"
                                Click="Button_Click" x:Name="VerenaListe"/>

        </Grid>
    </Grid>
</Window>


